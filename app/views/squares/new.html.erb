

<%= form_for @square, url: {action: 'create'} do |squares_form| %>

  <%= squares_form.fields_for :users do |users_form| %>

    <div class='form-group'>
      <%= users_form.label :first_name %>
      <%= users_form.text_field :first_name, class: 'form-control', 
	  placeholder: 'First Name' %>
    </div>

    <div class='form-group'>
      <%= users_form.label :last_name %>
      <%= users_form.text_field :last_name, class: 'form-control', 
	  placeholder: 'Last Name' %>
    </div>

  <% end %>

  <div class='form-group'>
    <%= squares_form.label :message %>
    <%= squares_form.text_area :message, class: 'form-control',
	placeholder: 'Message', rows: '3' %>
  </div>

  <div class='form-group'>
    <%= squares_form.label :photo, class: 'btn btn-default' do %>
      <%= squares_form.file_field :photo, style: 'display:none',
	  accept: 'image/*'%>
      Photo Upload
    <% end %>
  </div>

  <div class='form-group'>
    <%= squares_form.label :video, class: 'btn btn-default' do %>
      <%= squares_form.file_field :video, style: 'display:none',
	  accept: 'video/*'%>
      Video Upload
    <% end %>
  </div>

  <div class='form-group'>
    <%= squares_form.submit 'Create', class: 'btn btn-primary' %>
  </div>

  <div class='form-group'>
    <%= link_to 'Cancel', quilts_path, class: 'btn btn-default',
  	role: 'button' %>
  </div>

<% end %>
