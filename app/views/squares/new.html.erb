

<%= form_for @square, url: {action: 'create'} do |squares_form| %>

  <div class='form-group'>
    <%= squares_form.label :message %>
    <%= squares_form.text_area :message, class: 'form-control',
	placeholder: 'Message', rows: '3' %>
  </div>

  <div class='form-group'>
    <%= squares_form.label :signature %>
    <%= squares_form.text :signature, class: 'form-control',
	placeholder: 'Signature' %>
  </div>

  <div class='form-group'>
    <%= squares_form.label :media, class: 'btn btn-default' do %>
      <%= squares_form.file_field :media, style: 'display:none',
	  accept: 'image/*|video/*'%>
      Attach Photo or Video
    <% end %>
  </div>

  <div class='form-group'>
    <%= squares_form.submit 'Create', class: 'btn btn-primary' %>
  </div>

  <div class='form-group'>
    <%= link_to 'Cancel', quilts_path, class: 'btn btn-default',
  	role: 'button' %>
  </div>

<% end %>
