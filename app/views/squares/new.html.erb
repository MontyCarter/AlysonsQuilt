
<div class='col-md-3'></div>

<div class='col-md-6'>

<h2>New Square</h2>

<% if @errors %>

  <div class='alert alert-danger' role='alert'>
    <span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true' 
	  style='margin-right:5px;'></span>
    <span class='sr-only'>Error:</span>
    <span><%= "Errors: #{@errors.join(', ') + '.'}" %></span>
  </div>

<% end %>

<%= form_for @square, url: {action: 'create'} do |squares_form| %>

  <div class='form-group'>
    <%= squares_form.label 'Name' %>
    <%= squares_form.text_field :signature, class: 'form-control',
	placeholder: 'Name' %>
  </div>

  <div class='form-group'>
    <%= squares_form.label :message %>
    <%= squares_form.text_area :message, class: 'form-control',
	placeholder: 'Message', rows: '3' %>
  </div>

  <div class='form-group'>
    <%= squares_form.label :media, class: 'btn btn-default btn-lg' do %>
      <%= squares_form.file_field :media, style: 'display:none',
	  accept: 'image/*|video/*'%>
      Attach Photo or Video
    <% end %>
    <span id='square_media_status' style='margin-left:5px;'></span>
  </div>

  <hr>

  <div class='row'>

    <div class='col-md-6 text-left'>

      <div class='form-group'>
	<%= squares_form.submit 'Create', class: 'btn btn-primary btn-lg',
	    data: { disable_with: 'Uploading...' } %>
      </div>

    </div>

    <div class='col-md-6 text-right'>

      <div class='form-group'>
	<%= link_to 'Cancel', quilts_path, class: 'btn btn-default btn-lg',
  	    role: 'button' %>
      </div>

    </div>

<% end %>

</div>

<div class='col-md-3'></div>

