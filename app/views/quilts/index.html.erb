
<div class='row'>

<div class='col-lg-8 col-md-8 col-sm-8 col-xs-12 col-lg-offset-2 col-md-offset-2 col-sm-offset-2'>

  <div class="progress" id="quilt-progress">
    <div class="progress-bar" id="quilt-progress-bar" 
	 role="progressbar" aria-valuenow="60" 
	 aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
      <span>Loading quilt ...</span>
    </div>
  </div>
  
  <div id='quilt-main'></div>

</div>

</div>

<div class="modal fade" id="square-modal" tabindex="-1" role="dialog" 
     aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" id="square-modal-close-top"
		aria-label="Close">
	  <span aria-hidden="true">&times;</span></button>
	<span style="margin-right:5px;"><strong>From:</strong></span>
        <span id="square-modal-title" style="font-style:oblique;">title</span>
      </div>
      <div class="modal-body">

	<div id="square-modal-media-spinner">
	  <%= image_tag 'spinner.svg' %>
	</div>

	<div id="square-modal-media" style="margin-bottom:10px;"></div>

	<div id="square-modal-message-div">
	  <p id="square-modal-message"></p>
	</div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default"
		id="square-modal-close-bottom">Close</button>
      </div>
    </div>
  </div>
</div>
